{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/node",
      "config": { "installCommand": "npm install" }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/frontend/$1" },
    { "src": "/search/image", "dest": "/api/index.py" }
  ]
}